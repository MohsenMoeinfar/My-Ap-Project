<Window x:Class="Project.Wpf.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Wpf"
        mc:Ignorable="d"
        Title="EditTaskWindow" Height="450" Width="800">
         <Window.Background>
          <SolidColorBrush Color="#00FA9A"/>
       </Window.Background>

     <Grid>
        <StackPanel>
            <TextBlock Text="Task Id you want to edit: :"/>
            <TextBox Text="{Binding TaskId , Mode=TwoWay}" />
          
            <Button Name="Edit" Content="Edit" Width="100" Margin="0,5" Click="Edit_Click"/>
        </StackPanel>



    </Grid>

</Window>
