<Window x:Class="Project.Wpf.DeleteTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Wpf"
        mc:Ignorable="d"
        Title="DeleteTaskWindow" Height="450" Width="800">
        <Window.Background>
          <SolidColorBrush Color="#00FA9A"/>
       </Window.Background>

     <StackPanel Margin="10">
        <TextBlock Text="Enter the ID of the task to delete:" FontWeight="Bold" Margin="0 0 0 10" />
        <TextBox Text="{Binding TaskId , Mode=TwoWay}" Margin="0 0 0 10" />
        <StackPanel Orientation="Horizontal">
            <Button Name="Delete" Content="Delete" Width="100" Margin="0 0 10 0" Click="Delete_Click"/>
        </StackPanel>
    </StackPanel>

</Window>